@{
    ViewData["Title"] = "Net5 Anime Store";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Net5 Anime Store</h1>
    <p>Shop anything related to anime, manga and game culture here.</p>
</div>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://img.amiami.com/images/b/large/p5_makoto.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://img.amiami.com/images/b/large/nekopara-prettykitty.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://img.amiami.com/images/b/large/sakura-rocket.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
</div>

<br />

<div class="row">
    <div class="col-sm-4">
        <div class="card" style="width: 18rem;">
            <img src="./img/figure-card/noire-figure.jpg" class="card-img-top" alt="noire-figure-image">
            <div class="card-body">
                <h5 class="card-title">Figures</h5>
                <p class="card-text">Shop for Prize and Scale Figures here.</p>
                <a href="#" class="btn btn-primary">Shop</a>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card" style="width: 18rem;">
            <img src="./img/game-card/nep-game.jpg" class="card-img-top" alt="nep-game-image">
            <div class="card-body">
                <h5 class="card-title">Games</h5>
                <p class="card-text">Shop for Collector's Edition Games and more here.</p>
                <a href="#" class="btn btn-primary">Shop</a>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card" style="width: 18rem;">
            <img src="./img/console-card/persona-ps4.jpg" class="card-img-top" alt="persona-ps4-pro-image">
            <div class="card-body">
                <h5 class="card-title">Consoles</h5>
                <p class="card-text">Shop for Collector's Edition Consoles and more here.</p>
                <a href="#" class="btn btn-primary">Shop</a>
            </div>
        </div>
    </div>
</div>