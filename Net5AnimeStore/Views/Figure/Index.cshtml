@model IEnumerable<Figure>

<div class="row row-cols-1 row-cols-md-3">
    @foreach (var figure in Model)
    {
        <div class="col mb-4">
            <div class="card h-100">
                <img src="@figure.ImageUrl" class="card-img-top" alt="@figure.Name">
                <div class="card-body">
                    <h5 class="card-title">@figure.Name</h5>
                    <p class="card-text">@figure.ShortDescription</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">R$ @figure.Price</li>
                    </ul>
                    <br />
                    <a href="/figure/detail/@figure.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<a href="/figure/create" class="btn btn-info">Add</a>